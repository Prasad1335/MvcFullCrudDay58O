@model List<MvcFullCrudDay58O.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row p-5">
    <div class="col-md-12   mt-2">
        <a class="btn btn-outline-danger" asp-controller="User" asp-action="Create">Create New User</a>
    </div>
    <div class="col-md-12 bg-dark p-2 mt-3">
        <h4 class="text-info">View All User</h4>
    </div>
    <div class="col-md-12 mt-3 p-0">
        <table class="table table-bordered table-hover table-striped">
            <thead class=" bg-warning text-center">
                <tr>
                    <td>Id</td>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>DateOfBirth</td>
                    <td>Pan</td>
                    <td>Address</td>
                    <td>Gender</td>
                    <td>MobileNumber</td>
                    <td>Email</td>
                    <td>Comment</td>
                    <td>DepartmentRefId</td>
                    <td colspan="3">Operation</td>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var user in Model)
                {

                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.DateOfBirth</td>
                        <td>@user.Pan</td>
                        <td>@user.Address</td>
                        <td>@user.Gender</td>
                        <td>@user.MobileNumber</td>
                        <td>@user.Email</td>
                        <td>@user.Comment</td>
                        <td>@user.DepartmentRefId</td>
                        <td>  <a class="btn btn-outline-info" asp-controller="User" asp-action="Details" asp-route-id="@user.Id">Details</a> </td>
                        <td>  <a class="btn btn-outline-primary" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a> </td>
                        <td>  <a class="btn btn-outline-danger" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

