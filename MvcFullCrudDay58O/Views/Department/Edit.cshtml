@{
}

<div class="row p-5 ">

    <div class="col-md-12 bg-dark p-2 mt-3">
        <h4 class="text-info">Edit Department</h4>
    </div>
    <div class="col-md-12 mt-3 p-0">
        <form asp-controller="Department" asp-action="Edit" method="post">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th> Name</th>
                        <td><input asp-for="Name" type="text" placeholder="enter department Name" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td><input asp-for="Description" type="text" placeholder="enter department description" class="form-control" /></td>
                    </tr>
                </tbody>
            </table>

            <div>
                <button type="submit" class="btn btn-danger">Edit Department</button>
                <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Listing</a>
            </div>
        </form><hr />
    </div>
</div>
