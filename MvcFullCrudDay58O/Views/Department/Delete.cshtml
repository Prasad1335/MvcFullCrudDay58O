@model MvcFullCrudDay58O.Models.Department
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row p-5">

    <div class="col-md-12 bg-danger p-2 mt-3">
        <h4 class="text-white">Delete Department Id : @Model.Id. Please confirm</h4>
    </div>
    <div class="col-md-12 mt-3 p-0">
        <table class="table table-bordered table-hover table-striped">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model.Description</td>
                </tr>
            </tbody>
        </table>

        <form asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id">
            <div>
                <button type="submit" class="btn btn-danger">Delete this Department</button>
                <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Listing</a>
            </div>
        </form>
    </div>
</div>

